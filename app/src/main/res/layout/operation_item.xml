<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/curingItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/dp_10"
                android:src="@mipmap/eqimg" />

            <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:text="设备名称: "
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/EqName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:text="设备型号: "
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/EqNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="wrap_content"
                        android:text="设备用途: "
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/EqUsage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/curingItem">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行时长:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/runTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维  护  人:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/defender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/item1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行速度:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/runSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备位置:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/eqAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/item2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备温度:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/eqTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="利  用  率:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/utilizationRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/item3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修次数:"
                    android:textColor="@color/color_999999"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"/>

                <TextView
                    android:id="@+id/repairNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14H"
                    android:textColor="@color/color_333333"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
