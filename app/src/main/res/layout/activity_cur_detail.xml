<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:src="@mipmap/eqimg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="设备名称: "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/EqName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聚焦设备"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="设备型号: "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/EqNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="JJHVGKK126666666"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="设备用途: "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/EqUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聚设备用途聚焦设备用途聚焦设备用途聚焦设备用途聚焦设备用途"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="养护知识"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识养护知识"
            android:padding="@dimen/dp_10"
            android:textColor="@color/color_999999"/>
    </LinearLayout>

</LinearLayout>
