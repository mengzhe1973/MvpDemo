<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="工作台"
        android:textSize="@dimen/sp_20" />

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guarantee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/record"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="已维保"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eee" />

            <TextView
                android:id="@+id/maintenance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/maintained"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="待维保"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/plan"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="已过期"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eee" />

            <TextView
                android:id="@+id/curing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/yichang"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="异常设备"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eq_run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/manage"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="维保处理"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eee" />

            <TextView
                android:id="@+id/infringement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/summary"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:text="工作总结"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/sign_in"
            android:drawablePadding="@dimen/dp_10"
            android:text="签到" />

    </LinearLayout>
</LinearLayout>
